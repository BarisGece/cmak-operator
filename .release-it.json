{
  "git": {
    "commitMessage": "chore: release ${version}",
    "tagAnnotation": "chore: release ${version}",
    "requireCleanWorkingDir": true,
    "requireCommits": true,
    "requireBranch": "master",
    "commit": true,
    "push": true,
    "tag": true
  },

  "npm": {
    "publish": false
  },

  "github": {
    "release": true
  },

  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "conventionalcommits"
    },
    "@release-it/bumper": {
      "out": "Chart.yaml"
    }
  }
}
