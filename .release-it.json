{
  "ci": true,
  "git": {
    "requireBranch": "master",
    "commit": false,
    "tagAnnotation": "chore: release ${version}"
  },
  "npm": false,
  "github": {
    "release": true,
    "assets": ["cmak-operator*.tgz"]
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "conventionalcommits"
    }
  },
  "hooks": {
    "after:release": "echo ${version} > /tmp/cmak.version"
  }
}
